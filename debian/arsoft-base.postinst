#!/bin/sh -e

#DEBHELPER#

case "$1" in
	configure|upgrade)
		rm /etc/vim/vimrc
		ln -s /usr/share/arsoft-base/vim/vimrc /etc/vim/vimrc
		
		rm /etc/bash.bashrc
		ln -s /usr/share/arsoft-base/bash/bash.bashrc /etc/bash.bashrc
		;;
    abort-upgrade|abort-remove|abort-deconfigure)
		;;

    *)
		echo "postinst called with unknown argument \`$1'" >&2
		exit 1
		;;
esac



exit 0
